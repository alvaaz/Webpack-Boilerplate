				form#header-searchform.searchform(role='search', method='get', action='#')
					input#s(type='text', value='', name='s', placeholder='¿Qué buscas?')
					input#searchsubmit(type='submit', value='Search')
				h6.widget-title Presiona Enter para buscar
		#header-widget.social
			+lists('socialmedia-widget', social)